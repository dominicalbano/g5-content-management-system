<div class="widget-list">
  <div class="l-container">
    {{#view "toggle-panel" contentBinding="this"}}
      <span class="toggle-panel-text btn--toggle-hide">Hide Widgets</span>
      <span class="toggle-panel-text hide btn--toggle-show">Show Widgets</span>
    {{/view}}

    <div class="toggle-content page-section">
      {{#view "garden-widgets-toggle" contentBinding="this"}}
        <span class="toggle-widget-text">Grid View</span>
        <span class="toggle-widget-text hide">List View</span>
      {{/view}}
      <div class="page-title"><h2>Select Widgets</h2></div>
      <span class="instructions">Drag widgets onto drop areas below</span>
      {{#if model.isUpdating}}
        <div class="loading">Loading...</div>
      {{else}}
        <ul class="widgets--list-view widget-view">
          {{#each this}}
            {{view "garden-widget" contentBinding="this"}}
          {{/each}}
        </ul>

        <div class="widget-view visuallyhidden">
          {{#view "thumnail-scroller"}}
            <div class="jTscrollerContainer">
              <ul id="choose-widgets" class="jTscroller clearfix">
              {{#each this}}
                {{view "garden-widget" contentBinding="this"}}
              {{/each}}
              </ul>
            </div>
            <a href="#" class="jTscrollerPrevButton"></a>
            <a href="#" class="jTscrollerNextButton"></a>
          {{/view}}
        </div>
      {{/if}}
    </div>
  </div>
</div>
