<div class="l-container">
  <h2 class="page-title">
    {{#link-to "redirectManager" this class="btn" }}Redirect Manager{{/link-to}}
    <a href="#" {{action deploy this}} class="btn">Deploy</a>
  </h2>

  <div class="site-settings page-section l-grid">
    {{ render "website/websiteTemplate" websiteTemplate }}
  </div>

  <div class="site-pages page-section">
    <div class="page-title">
      {{#view App.NewPage}}
        {{#link-to "webPageTemplates.new" class="new-page-btn btn" }}Create New Page{{/link-to}}
      {{/view}}
    </div>
    <div class="cards">
      {{ render "website/webHomeTemplate" webHomeTemplate }}
      {{ render "website/webPageTemplates" webPageTemplates }}
      {{ outlet "newWebPageTemplate" }}
    </div>
  </div>

  <div class="delete-page">
    <div class="icon icon--trash"></div>
  </div>
</div>
