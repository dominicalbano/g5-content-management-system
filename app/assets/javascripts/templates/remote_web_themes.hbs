<div class="theme-picker thumbnail-field clearfix">
  <div class="l-container">

    {{#view App.TogglePanelView contentBinding="this"}}
      <span class="toggle-panel-text btn--toggle-hide">Hide Themes</span>
      <span class="toggle-panel-text hide btn--toggle-show">Show Themes</span>
    {{/view}}

    <div class="toggle-content page-section">
      <h2 class="page-title">Select a Theme</h2>
      {{#if model.isUpdating}}
        <div class="loading">Loading...</div>
      {{else}}
        {{#view App.ThumbnailScrollerView}}
          <div class="jThumbnailScroller">
            <div class="jTscrollerContainer">
              <ul class="jTscroller thumbs clearfix">
                {{#each model}}
                  <li class="thumb">
                    <a href="#" {{ action "update" this }}>
                      {{#view App.RemoteWebThemeView contentBinding="this"}}
                      <img alt="Thumbnail" {{ bindAttr src="thumbnail" }} {{ bindAttr class="view.isSelected" }}>
                      {{ name }}
                      {{/view}}
                    </a>
                  </li>
                {{/each}}
              </ul>
            </div>
            <a href="#" class="jTscrollerPrevButton"></a>
            <a href="#" class="jTscrollerNextButton"></a>
          </div>
        {{/view}}
      {{/if}}
      {{ render "webThemeColors" }}
    </div>
  </div>
</div>
