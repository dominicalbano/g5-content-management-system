<div class="card-container back">

  {{ partial "website/webPageTemplateHead" }}

  <div class="card-body">

    <form class="form">

      <div class="form-field">
        <label>Page Name</label>
        {{input value=name}}
      </div>

      <div class="form-field">
        <label>Page Title</label>
        {{input}}
      </div>

      <div class="form-field">
        <label for="page-{{!<%= web_template.id %>}}" class="switch-label">Page Status</label>
        <div class="switch switch-small" data-on="success" data-off="danger">
          <input type="checkbox"
            id="page-{{!<%= web_template.id %>}}"
            {{!<%= "checked" unless web_template.disabled? %>}}
          />
        </div>
      </div>

      <div class="buttons">
        <a href="#" class="cancel-link card-flip">Cancel</a>
        <!-- <button {{action cancel}} class="cancel-link card-flip">Cancel</button> -->
        <button {{action save}} class="btn btn--small">Save</button>
      </div>
    </form>

    {{#unless isNew}}
      {{ partial "website/webPageTemplateFlip" }}
    {{/unless}}
  </div>
</div>