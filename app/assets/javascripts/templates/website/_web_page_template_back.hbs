<div class="card-container back">

  {{ partial "website/webPageTemplateHead" }}

  <div class="card-body">

    <form class="form">

      <div class="form-field">
        <label>Page Name</label>
        {{input value=name}}
      </div>

      <div class="form-field">
        <label>Page Title</label>
        {{input}}
      </div>

      <div class="form-field">
        {{! <%= render partial: "web_template_toggle_disabled", locals: { website: website, web_template: web_template } %> }}
      </div>

      <div class="buttons">
        <button {{action save}} class="btn btn--small">Save</button>
        <button {{action cancel}} class="btn btn--small">Cancel</button>
      </div>
    </form>
    
    {{#unless isNew}}
      {{ partial "website/webPageTemplateFlip" }}
    {{/unless}}
  </div>
</div>