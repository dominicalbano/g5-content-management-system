<header role="banner" class="banner">
  <div class="l-container">

    <h1 class="banner-title">
      <a {{bind-attr href="controllers.client.dsh_url"}}>
        <img class="banner-logo" src="<%= asset_path("logo.png") %>" alt="G5" /><span class='banner-logo-text'>DXM</span>
      </a>

      <a href="/">
        CMS: <strong class="banner-subtitle">{{controllers.client.name}}</strong>
      </a>

      {{#if controllers.website}}
        &raquo;
        {{#link-to "website" controllers.website}}
          <strong class="banner-subtitle">{{controllers.website.name}}</strong>
        {{/link-to}}
      {{/if}}

      {{#if controllers.webPageTemplate}}
        <span class="page-name">
          &raquo;
          <a><strong class="banner-subtitle">{{controllers.webPageTemplate.name}}</strong></a>
        </span>
      {{/if}}
    </h1>

    <div class="nav-toggle">
    </div>

    <nav class="nav g5-internal-feature" role="navigation">
      <ul>
        <li><a {{bind-attr href="controllers.client.ch_url"}}>CMS</a></li>
        <li><a {{bind-attr href="controllers.client.cpns_url"}}>Phone Numbers</a></li>
        <li><a {{bind-attr href="controllers.client.cpas_url"}}>Pricing and Availability</a></li>
        <li><a {{bind-attr href="controllers.client.cxm_url"}}>Customer Experience Management</a></li>
      </ul>
    </nav>

  </div> <!-- end .l-container -->
</header>

