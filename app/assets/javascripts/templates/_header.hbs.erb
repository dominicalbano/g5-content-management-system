<header role="banner" class="banner">
  <div class="l-container">

    <h1 class="banner-title">
      <a href="/">
        <img class="banner-logo" src="<%= asset_path("logo.png") %>" alt="G5" /> CMS:
      </a>

      <a href="/">
        <strong class="banner-subtitle">{{controllers.client.name}}</strong>
      </a>

      {{#if controllers.websiteIndex}}
        &raquo;
        {{#link-to "website" controllers.websiteIndex}}
          <strong class="banner-subtitle">{{controllers.websiteIndex.name}}</strong>
        {{/link-to}}
      {{/if}}

      <span class="page-name">
        &raquo;
        <a><strong class="banner-subtitle"></strong></a>
      </span>
    </h1>

  </div> <!-- end .l-container -->
</header>
