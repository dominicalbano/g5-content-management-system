<div class="l-container">
  <h2 class="page-title">
    Locations
    <a {{action updateGardenWidgets}} href="#" class="btn">Update Widgets</a>
    <a {{action updateGardenWebThemes}} href="#" class="btn">Update Themes</a>
    <a {{action updateGardenWebLayouts}} href="#" class="btn">Update Layouts</a>
  </h2>



  <div class="faux-table faux-table--striped">

    <div class="faux-table-head">
      <span class="faux-table-cell">Name</span>
      <span class="faux-table-cell">Actions</span>
    </div> <!-- end .faux-table-head -->

    <ul class="faux-table-body">
      {{#each model}}
      <li class="faux-table-row location">
        <div class="faux-table-cell">
          {{name}}
        </div>
        <div class="faux-table-cell buttons">
          {{#link-to "website" this.website class="btn btn--a" }}Edit{{/link-to}}
          <a {{bindAttr href="this.website.herokuUrl"}} class="btn btn--a">View</a>
          <a {{action deploy this}} href="#" class="btn btn--a">Deploy</a>
        </div>
      </li>
      {{/each}}
    </ul> <!-- end .faux-table-body -->
  </div> <!-- end .faux-table -->
</div>
