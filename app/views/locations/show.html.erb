<% title "Location" %>

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>
<p>
  <strong>Corporate:</strong>
  <%= @location.corporate %>
</p>
<h3>Pages</h3>
<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Page</th>
      <th>Layout</th>
      <th>Theme</th>
      <th>Widgets</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @location.pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><img src="http://placehold.it/250x140"></td>
        <td><img src="http://placehold.it/250x140"></td>
        <td>
          <ul>
            <% page.widgets.each do |widget| %>
              <li><%= widget.name %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <%= link_to "Edit", edit_location_page_path(@location, page), class: "btn" %>
          <%= link_to "Preview", preview_location_page_path(@location, page), class: "btn btn-success" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to "New Page", new_location_page_path(@location), class: 'btn' %>
  <%= link_to "View All", locations_path %>
</p>
