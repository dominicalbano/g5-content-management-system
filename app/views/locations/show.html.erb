<% title "Location" %>

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>
<p>
  <strong>Corporate:</strong>
  <%= @location.corporate %>
</p>
<h3>Pages</h3>
<ul>
  <% @location.pages.each do |page| %>
    <li><%= link_to page.name, location_page_path(@location, page) %></li>
  <% end %>
</ul>

<p>
  <%= link_to "New Page", new_location_page_path(@location), class: 'btn' %>
  <%= link_to "View All", locations_path %>
</p>
