<h2 class="page-title">Locations</h2>

<div class="faux-table faux-table--striped">

  <div class="faux-table-head">
    <span class="faux-table-cell">Name</span>
    <span class="faux-table-cell">Actions</span>
  </div> <!-- end .faux-table-head -->

  <ul class="faux-table-body">
    <% @locations.each do |location| %>
    <li class="faux-table-row">
      <div class="faux-table-cell">
        <%= location.name %>
      </div>
      <div class="faux-table-cell buttons">
        <%= link_to "Edit", website_path(location.website), class: "btn  btn--a" %>
        <%= link_to "Ember", "/ember/#/website/#{location.website.id}", class: "btn  btn--a" %>
        <%= link_to "View", location.website.heroku_url, class: "btn  btn--a" %>
        <%= link_to "Deploy", deploy_website_path(location.website), method: :post, class: "btn btn--a" %>
      </div>
    </li>
    <% end %>
  </div> <!-- end .faux-table-body -->
</div> <!-- end .faux-table -->
