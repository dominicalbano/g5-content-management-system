<div class="layout-picker thumbnail-field">
  <div class="container">
    <h2>Select a Layout</h2>
    <div class="thumbs clearfix">
      <%= f.fields_for :web_layout, @web_template.web_layout || WebLayout.new do |ff| -%>
        <%= ff.error_messages %>
        <% WebLayout.all_remote.each do |web_layout| %>
          <div class="thumb">
            <%= ff.radio_button :url, web_layout.url %>
            <%= ff.label :url, :value => web_layout.url do %>
              <%= image_tag_or_placeholder(web_layout.thumbnail) %>
              <%= web_layout.name %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="theme-picker thumbnail-field clearfix">
  <div class="container">
    <div class="left" style="width:75%;float:left;">
      <h2>Select a Theme</h2>
      <div class="jThumbnailScroller">
        <div class="jTscrollerContainer">
          <div class="jTscroller thumbs clearfix">
            <%= f.fields_for :web_theme, @web_template.web_theme || WebTheme.new do |ff| -%>
              <%= ff.error_messages %>
              <% WebTheme.all_remote.each do |web_theme| %>
                <div class="thumb">
                  <%= ff.radio_button :url, web_theme.url %>
                  <%= ff.label :url, :value => web_theme.url do %>
                    <%= image_tag_or_placeholder(web_theme.thumbnail) %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <a href="#" class="jTscrollerPrevButton"></a>
      	<a href="#" class="jTscrollerNextButton"></a>
      </div>
    </div> <!-- end left -->
    <div class="right" style="float:right;">
      <div class="colors clearfix">
        <h3>Theme Colors:</h3>
        <div class="color-fields">
          <%= f.fields_for :website do |ff| -%>
          <div class="check-field">
            <%= ff.check_box :custom_colors %>
            <%= ff.label :custom_colors, "Use custom colors" %>
          </div>
          <div class="color-field">
            <%= ff.text_field :primary_color, type: 'color', id: 'color-1' %>
            <label for="color-1">Primary</label>
          </div>
          <div class="color-field">
            <%= ff.text_field :secondary_color, type: 'color', id: 'color-2' %>
            <label for="color-2">Secondary</label>
          </div>
          <% end -%>
        </div>
      </div>
    </div> <!-- end right -->
  </div>
</div>
