<%= f.fields_for :widgets, widget.dup do |ff| -%>
  <li>
    <%= ff.hidden_field :position, class: 'position' %>
    <%= ff.hidden_field :section, class: 'section' %>
    <% widget.css.each do |css| %>
      <%= ff.hidden_field "css][", value: css %>
    <% end if widget.css %>
    <% widget.javascript.each do |js| %>
      <%= ff.hidden_field :"javascript][", value: js %>
    <% end if widget.javascript %>
    <%= ff.hidden_field :url %>
    <%= ff.hidden_field :name %>
    <%= ff.hidden_field :html %>
    <%= widget.name %>
  </li>
<% end -%>
