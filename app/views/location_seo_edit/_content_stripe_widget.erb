<li><%= content_stripe_widget.name %>
  <ul>
    <% tags = %w(row_bg_color row_text_color row_layout) %>
    <table width="75%" border="1">
    <% tags.each do |tag| %>
      <tr>
        <th><%= tag %></th>
        <td><%= content_stripe_widget.get_setting_value(tag) %></td>
      </tr>
    <% end %>
    </table>

    <% children = Array.new %>
    <% (1..content_stripe_widget.max_widgets).each do |i| %>
      <% cs_name = "#{content_stripe_widget.child_widget_setting_prefix(i)}name" %>
      <li><%= cs_name %>=<%=content_stripe_widget.get_setting_value(cs_name) %></li>
      <% children.push(content_stripe_widget.get_setting_value("#{column_widget.child_widget_setting_prefix(i)}id")) %>
    <% end %>
  </ul>
  <% if content_stripe_widget.widgets.count > 0 %>
      <ul>
        <% children.each do |child_id| %>
            <% child = Widget.find_by_id(child_id) %>
            <% if child %>
                <%= render partial: "widget", object: child %>
            <% else %>
            <li class="error">WIDGET NOT FOUND! Check configuration.</li>
            <% end %>
        <% end %>
      </ul>
  <% end %>
</li>
