<div class="<%= web_template.type.parameterize %>">
  <div class="l-cell">
    <%= image_tag_or_placeholder(web_template.web_layout.try(:thumbnail), class: 'thumb', style: 'width: 250px') %>
  </div>

  <div class="l-cell">
    <%= image_tag_or_placeholder(web_template.web_theme.try(:thumbnail), class: 'thumb') %>
  </div>

  <div class="l-cell l-double-cell">
    <h3 class="template-heading">Widgets</h3>
    <ul class="widgets widgets--small">
      <%= render web_template.widgets %>
    </ul>
  </div>

</div>
