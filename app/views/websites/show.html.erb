<h2 class="page-title">
  Location:
  <%= @website.name %>
  &mdash; Pages
  <span class="buttons">
    <%= link_to "Deploy", deploy_website_path(@website), method: :post, class: "btn" %>
  </span>
</h2>

<div class="site-settings page-section l-grid">
  <%= render partial: "web_template", locals: { website: @website, web_template: @website_template } %>
</div>

<div class="site-pages page-section">
  <div class="page-title">
    <a href="#" class="btn">Create New Page</a>
  </div>

  <div class="cards">
    <% @web_page_templates.each do |web_page_template| %>
      <%= render partial: "page_template", locals: { website: @website, web_template: web_page_template } %>
    <% end %>
  </div>

</div>

<div class="delete-page">
  <div class="icon icon--trash"></div>
</div>

<%= render "widgets/edit_modal" %>
